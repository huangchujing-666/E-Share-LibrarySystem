@{
    ViewBag.Title = "图书列表";
}
@model LibrarySystem.Admin.Models.BookInfoVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="row" style="padding:10px 10px;">
                        <form action="/BookInfo/List" method="get">
                            <div class="row" style="padding:10px 10px;">
                                <div class="col-sm-3">
                                    学校名称：
                                    <select class="form-control inline" style="width:70%;" name="QueryUId">
                                        <option value="0">请选择学校</option>
                                        @if (Model != null && Model.UinversityList != null && Model.UinversityList.Count > 0)
                                    {
                                        foreach (var item in Model.UinversityList)
                                        {
                                    <option value="@item.UniversityId">@item.Name</option>
                                        }
                                    }
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    图书类别：
                                    <input type="text" name="QueryCategory" class="form-control inline" style="width:60%;" placeholder="请输入图书类别" value="@(Model.QueryCategory??"")">
                                </div>
                                <div class="col-sm-3">
                                    图书名称：
                                    <input type="text" name="QueryName" class="form-control inline" style="width:60%;" placeholder="请输入图书名称" value="@(Model.QueryName??"")">
                                </div>
                                <div class="col-sm-3">
                                    图书ISBN：
                                    <input type="text" name="QueryIsbn" class="form-control inline" style="width:60%;" placeholder="请输入图书ISBN" value="@(Model.QueryIsbn??"")">
                                </div>
                                </div>
                            <div class="row" style="padding:10px 10px;">
                                <div class="col-sm-3">
                                    <button type="submit" class="btn btn-info">搜索</button>
                                </div>
                                </div>
</form>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">所在学校</th>
                                    <th class="text-center">图书名称</th>
                                    <th class="text-center">图书类别</th>
                                    <th class="text-center">图书ISBN</th>
                                    <th class="text-center">图书作者</th>
                                    <th class="text-center">库存数量</th>
                                    <th class="text-center">可借数量</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Paging.Items != null && Model.Paging.Items.Count > 0)
                                {
                                    foreach (var item in Model.Paging.Items)
                                    {
                                        <tr>
                                            <td class="text-center">@item.University.Name</td>
                                            <td class="text-center">@item.Title</td>
                                            <td class="text-center">@item.Category</td>
                                            <td class="text-center">@item.Isbn</td>
                                            <td class="text-center">@item.Author</td>
                                            <td class="text-center">@item.Count</td>
                                            <td class="text-center">@item.Available</td>

                                            <td>
                                                @if (LibrarySystem.Admin.Common.Loginer.UniversityId == 0||LibrarySystem.Admin.Common.Loginer.UniversityId==item.UniversityId)
                                                {
                                                    if (item.Status == 0)
                                                    {
                                                        <button onclick="enable('/BookInfo/UpdateStatus?BookInfoId=@item.BookInfoId&Status=@((int)LibrarySystem.Domain.EnumHelp.EnabledEnum.有效)','/BookInfo/List','@item.BookInfoId','@((int)LibrarySystem.Domain.EnumHelp.EnabledEnum.有效)')" class="btn btn-primary"><i class="fa fa-check padding-right-4"></i>&nbsp;启用</button>
                                                    }
                                                    else
                                                    {
                                                        <a href="/BookInfo/Edit?BookInfoId=@item.BookInfoId" class="btn btn-info"><i class="fa fa-paste padding-right-4"></i>&nbsp;编辑</a>
                                                        <button onclick="disable('/BookInfo/UpdateStatus?BookInfoId=@item.BookInfoId&Status=@((int)LibrarySystem.Domain.EnumHelp.EnabledEnum.无效)','/BookInfo/List','@item.BookInfoId','@((int)LibrarySystem.Domain.EnumHelp.EnabledEnum.无效)')" class="btn btn-warning"><i class="fa fa-warning padding-right-4"></i>&nbsp;禁用</button>
                                                    }
                                                    <button onclick="del('/BookInfo/Delete','/BookInfo/List','@item.BookInfoId')" class="btn btn-danger"><i class="fa fa-times padding-right-4"></i>&nbsp;删除</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="btn-group">
                                <a href="/BookInfo/Edit" class="btn btn-info" data-refresh="0"><i class="fa fa-plus padding-right-4"></i>&nbsp;添加</a>
                                <a href="/BookInfo/List" class="btn btn-info" style="margin-left:10px;" data-refresh="0"><i class="fa fa-refresh padding-right-4"></i>&nbsp;刷新</a>
                            </div>
                            @Html.Raw(Model.Paging.Text)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
