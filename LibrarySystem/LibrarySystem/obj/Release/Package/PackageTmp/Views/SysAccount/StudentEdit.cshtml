@{
    ViewBag.Title = "信息编辑";
}
@using LibrarySystem.Domain;
@model LibrarySystem.Admin.Models.SysAccountVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        信息编辑 <small>修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.SysAccount.SysAccountId">
                        <input type="hidden" id="imgInfoId" value="@Model.SysAccount.BaseImageId" />
                        @*<input type="hidden" id="SystemRoleId" value="@LibrarySystem.Admin.Common.Loginer.RoleId" />*@
                        <input type="hidden" id="oldImgInfoId" value="@Model.SysAccount.BaseImageId" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">图片</label>
                            <div class="col-sm-6">
                                <input id="filename" name="filename" type="file" class="file-loading" multiple data-show-upload="true" data-show-caption="true">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group form-role">
                            <label class="col-sm-2 control-label">学校</label>
                            <div class="col-sm-4">
                                <select class="form-control inline" style="width:150px;" disabled name="UniversityId" id="UniversityId">
                                    <option value="0">请选择学校</option>
                                    @if (Model.SysAccount != null && Model.SysAccount.University != null)
                                    {
                                        <option value="@Model.SysAccount.UniversityId" selected="selected">@Model.SysAccount.University.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed form-role"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">账号</label>
                            <div class="col-sm-4">
                                <input type="text" name="account" readonly="readonly" id="account" class="form-control" placeholder="请输入账号" value="@(Model.SysAccount.Account ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">昵称</label>
                            <div class="col-sm-4">
                                <input type="text" name="nickName" id="nickName" class="form-control" placeholder="请输入昵称" value="@(Model.SysAccount.NickName ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        @if (Model.SysAccount.SysAccountId == 0)
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label">密码</label>
                                <div class="col-sm-4">
                                    <input type="password" name="passWord" id="passWord" class="form-control" placeholder="请输入密码" value="">
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 control-label">手机号</label>
                            <div class="col-sm-4">
                                <input type="text" name="mobilePhone" id="mobilePhone" class="form-control" placeholder="请输入手机号" value="@(Model.SysAccount.MobilePhone ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">电子邮箱</label>
                            <div class="col-sm-4">
                                <input type="text" name="Email" id="Email" class="form-control" placeholder="请输入电子邮箱" value="@(Model.SysAccount.Email ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">联系地址</label>
                            <div class="col-sm-4">
                                <textarea placeholder="请输入联系地址。如：广州市天河区中山大道西293号 广东技术师范大学 学生宿舍六栋101室" id="Address" name="Address" cols="50" rows="5" style="overflow:hidden">@Model.SysAccount.Address</textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed traffic-address" style="display:none;"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">备注</label>
                            <div class="col-sm-4">
                                <input type="text" name="remarks" id="remarks" class="form-control" placeholder="请输入备注" value="@(Model.SysAccount.Remarks ?? "")">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                                <a class="btn btn-white" href="/SysAccount/StudentEdit">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/plugins/fileinput/fileinput.js"+LibrarySystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/plugins/fileinput/zh.js"+LibrarySystem.Admin.Versions.Ver)"></script>
    <script src="@("/Scripts/ViewJs/SysAccount/StudentEdit.js"+LibrarySystem.Admin.Versions.Ver)"></script>
    <script type="text/javascript">


        //商家缩略图
        var img = [];

        if ('@Model.ImgInfo.Path' != '') {
            var str = '<img src="@(Model.ImgInfo.Source + Model.ImgInfo.Path)" class="kv-preview-thumb kv-file-content file-preview-image" />';
            img.push(str);
        }
        $('#filename').fileinput({
            language: 'zh',
            allowedFileTypes: ['image'],
            allowedFileExtensions: ['jpg', 'png', 'gif'],
            uploadUrl: '/Uploader/ImgFile?folder=SysAccount&title=系统帐号图像',
            showUpload: false,  //是否显示上传按钮
            showRemove: true,   //显示移除按钮
            maxFileSize: 2000,
            showCaption: true,  //是否显示标题
            maxFileCount: 1,    //表示允许同时上传的最大文件个数
            maxFileSize: 1024,   //单位为kb，如果为0表示不限制文件大小
            initialPreview: img,
            dropZoneTitle: '请选择需要上传的图片(200px*200px)',
        });
        //上传成功回调事件
        $("#filename").on("fileuploaded", function (event, data, previewId, index) {
            $('#imgInfoId').val(data.response);
        });
        //移除事件
        $("#filename").on("fileclear", function (event, data, previewId, index) {
            $.post("/Uploader/DeleteFile", { Id: $('#imgInfoId').val() }, function (data) { });
        });


    </script>
}


